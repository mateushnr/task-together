<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingHorizontal="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/item_notification_container">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_mail"
        android:contentDescription="@string/groupIconDescription"
        android:id="@+id/imvAvatar"
        android:background="@drawable/circular_container"
        app:tint="@color/gray10"
        android:padding="8dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/gray10"
        android:text="@string/groupInviteLabel"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/txvSenderNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/gray8"
        android:gravity="end"/>

</LinearLayout>