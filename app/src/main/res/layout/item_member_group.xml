<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/btnRemoveMember"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_marginEnd="12dp"
        app:tint="@color/red1"
        android:background="@color/gray2"
        android:contentDescription="@string/buttonRemoveMemberDescription"/>

    <ImageView
        android:id="@+id/imgIconUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/circular_container"
        android:backgroundTint="@color/gray3"
        android:contentDescription="@string/userIconDescription"
        android:padding="8dp"
        android:src="@drawable/icon_user"
        app:tint="@color/gray7"/>

    <TextView
        android:id="@+id/txvMemberUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textColor="@color/gray8"
        android:textSize="16sp" />
</LinearLayout>

